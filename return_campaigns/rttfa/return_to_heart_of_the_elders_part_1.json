      "condition": {
        "type": "math",
        "opA": {
          "type": "campaign_log_count",
          "section": "campaign_notes",
          "id": "paths_known"
        },
        "opB": {
          "type": "constant",
          "value": 6
        },
        "operation": "equals",
        "options": [
          {
            "boolCondition": true,
            "steps": [
              "resolution_1",
              "$proceed"
            ]
          },
          {
            "boolCondition": false,
            "steps": [
              "$check_tarot_reading",
