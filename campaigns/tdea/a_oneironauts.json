      "id": "check_someone_escaped",
      "text": "If at least one investigator was not captured:",
      "type": "branch",
      "condition": {
        "type": "campaign_log",
        "section": "hidden",
        "id": "someone_escaped",
        "options": [
          {
            "boolCondition": true,
            "border": true,
            "effects": [
