{
  "$schema": "http://json-schema.org/schema#",
  "$id": "schema/campaign.schema.json",
  "definitions": {
    "campaignLogSectionDefinition": {
      "title": "CampaignLogSectionDefinition",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["investigator_count", "count", "supplies", "header", "partner", "scarlet_keys", "hidden", "relationship"]
        },
        "partners": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/partner"
          }
        },
        "calendar": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/calendarEntry"
          }
        },
        "scarlet_keys": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/scarletKey"
          }
        }
      },
      "required": ["id", "title"],
      "additionalProperties": false
    },
    "campaignMap": {
      "title": "CampaignMap",
      "type": "object",
      "properties": {
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        },
        "fast_code": {
          "type": "string"
        },
        "locations": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/mapLocation"
          }
        },
        "labels": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/mapLabel"
          }
        }
      },
      "required": ["width", "height", "fast_code" , "locations", "labels"],
      "additionalProperties": false
    },
    "campaign": {
      "title": "Campaign",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "tarot": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "version": {
          "type": "number"
        },
        "position": {
          "type": "integer"
        },
        "no_side_scenario_xp": {
          "type": "boolean"
        },
        "map": {
          "$ref": "#/definitions/campaignMap"
        },
        "cards": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "gender": {
                "type": "string",
                "enum": ["m", "f", "nb"]
              },
              "description": {
                "type": "string"
              }
            },
            "additionalProperties": false,
            "required": ["code", "name"]
          }
        },
        "campaign_log": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/campaignLogSectionDefinition"
          }
        },
        "scenarios": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "hidden_scenarios": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "scenario_setup": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "side_scenario_steps": {
          "type": "array",
          "items": {
            "$ref": "step.schema.json#/definitions/step"
          }
        },
        "side_scenario_resolution": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "setup": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "$ref": "step.schema.json#/definitions/step"
          }
        },
        "campaign_type": {
          "type": "string",
          "enum": ["standalone", "campaign"]
        },
        "custom": {
          "$ref": "types.schema.json#/definitions/customData"
        },
        "achievements": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/achievement"
          }
        },
        "ultimatums": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/ultimatum"
          }
        }
      },
      "required": [
        "id",
        "campaign_type",
        "version",
        "name",
        "position",
        "campaign_log",
        "scenarios",
        "setup",
        "steps"
      ],
      "additionalProperties": false
    }
  }
}
