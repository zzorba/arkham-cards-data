{
  "$schema": "http://json-schema.org/schema#",
  "$id": "schema/scenario.schema.json",
  "definitions": {
    "challengeData": {
      "title": "ChallengeData",
      "type": "object",
      "properties": {
        "investigator": {
          "type": "string"
        },
        "card_discount": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "xp_cost": {
          "type": "number"
        },
        "requirements": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              }
            },
            "required": ["text"],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "xp_cost",
        "requirements"
      ],
      "additionalProperties": false
    },
    "scenario": {
      "title": "Scenario",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "main_scenario_id": {
          "type": "string"
        },
        "allow_side_scenario": {
          "type": "boolean"
        },
        "chaos_bag_card": {
          "type": "string"
        },
        "chaos_bag_card_text": {
          "type": "string"
        },
        "chaos_bag_card_back_text": {
          "type": "string"
        },
        "scenario_name": {
          "type": "string"
        },
        "full_name": {
          "type": "string"
        },
        "header": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "xp_cost": {
          "type": "number"
        },
        "rules": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/campaignRule"
          }
        },
        "side_scenario_type": {
          "type": "string",
          "enum": ["challenge", "standalone", "side_story"]
        },
        "challenge": {
          "$ref": "#/definitions/challengeData"
        },
        "custom": {
          "$ref": "types.schema.json#/definitions/customData"
        },
        "setup": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resolutions": {
          "type": "array",
          "items": {
            "$ref": "resolution.schema.json#/definitions/resolution"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "$ref": "step.schema.json#/definitions/step"
          }
        },
        "type": {
          "type": "string",
          "enum": [
            "interlude",
            "epilogue",
            "placeholder",
            "core"
          ]
        },
        "standalone_setup": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "id",
        "scenario_name",
        "full_name",
        "header",
        "setup",
        "steps"
      ],
      "additionalProperties": false
    }
  }
}
