{
  "$schema": "http://json-schema.org/schema#",
  "$id": "schema/resolution.schema.json",
  "definitions": {
    "resolution": {
      "$id": "#resolution",
      "title": "Resolution",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "hidden": {
          "type": "boolean"
        },
        "investigator_status": {
          "type": "array",
          "items": {
            "$ref": "types.schema.json#/definitions/investigatorStatus"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "narration": {
          "$ref": "types.schema.json#/definitions/narration"
        }
      },
      "required": [
        "id",
        "title",
        "steps"
      ],
      "additionalProperties": false
    }
  }
}
